extends layout

block title
  title binb

block nav
  ul.nav.pull-right
    li.active
      a(href="/") Home
    li
      a(target="_blank", href="/leaderboards")
        i.icon-list-alt.icon-white
        |  Leaderboards
    - if (locals.loggedin)
      li.dropdown
        a.dropdown-toggle(data-toggle="dropdown", href="#") Logged in as #{loggedin} 
          span.caret
        ul.dropdown-menu
          li
            a(href=`/user/${loggedin}`, target="_blank") Profile
          li
            a(href="/changepasswd") Change password
          li
            a(href="/logout") Logout
    - else
      li
        a(href="/signup") Sign up
      li
        a(href="/login") Login

block sections
  section
    .row
      .span7
        h3 Wat is dit?
        p De Nederlandse Editie van Binb
      .span9
        h3 Hoe dan?
        p Teveel tijd in quarantaine!
  section
    .row
      .span16
        ul.thumbnails
          each room in rooms
            li.span4
              a.thumbnail.relative(href=room)
                .room #{room} - 
                  span(id=room)
                  |  Spelers

append scripts
  script(src="/static/js/primus.min.js")
  script(src="/static/js/home.min.js")
